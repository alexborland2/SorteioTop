<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_descricao"
        android:layout_width="289dp"
        android:layout_height="112dp"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="sans-serif"
        android:text="Escolha um numero de 0 a 10"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/btnSortear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Escolha um numero de 0 a 10" />

    <Button
        android:id="@+id/btnSortear"
        android:layout_width="197dp"
        android:layout_height="89dp"
        android:layout_marginBottom="57dp"
        android:onClick="sortearNumero"
        android:text="Sortear"
        app:layout_constraintBottom_toTopOf="@+id/txtResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_descricao" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="91dp"
        android:text="Numero Sorteado: "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnSortear"
        app:layout_constraintTop_toBottomOf="@+id/btnSortear"
        tools:text="Numero Sorteado : " />

</androidx.constraintlayout.widget.ConstraintLayout>